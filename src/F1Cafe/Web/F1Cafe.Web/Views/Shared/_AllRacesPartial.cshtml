@model F1Cafe.Models.ViewModels.Races.AllRacesViewModel

<div class="row mb-1">
    @for (int i = 0; i < Model.Races.Count(); i++)
    {
        var race = Model.Races.ElementAt(i);

        if (i % 3 == 0 && i != 0)
        {
            @Html.Raw("</div><div class=\"row mb-1\">")
        }

        <div class="card shadow col-md-4 px-0">
            <a asp-controller="Races" asp-action="Details" asp-route-id="@race.Id">
                <div class="zoom">
                    <img class="card-img-top" src="@race.ImageUrl" alt="@race.Name Image">
                </div>
            </a>
            <div class="card-body">
                <h4 class="card-title font-weight-bold">@race.Name.ToUpper()</h4>
                <p class="card-text  font-weight-bold">@race.RaceWeekend</p>
            </div>
        </div>
    }
</div>